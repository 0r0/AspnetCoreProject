@{
    ViewData["Title"] = "Session Demo";
}
<h1>@ViewData["Title"]</h1>

<p>Fill these values.</p>
<form method="post">
    <div class="form-group">
        <label for="a">A Value</label>
        <input type="number" class="form-control" id="a" name="a" placeholder="Fill a number">
    </div>
    <div class="form-group">
        <label for="b">B Value</label>
        <input type="number" class="form-control" id="b" name="b" placeholder="Fill a number">
    </div>
    <div class="form-group">
        <label for="c">C Value</label>
        <input type="text" class="form-control" id="c" name="c" placeholder="Fill words">
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Submit">
    </div>
</form>
